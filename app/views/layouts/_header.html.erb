<header>
	<div id="logo">
		<%= image_tag("pie4.gif", :width => 100) %>
		<h2>Xtreme Pie</h2>
	</div>
	<div id="shoppingcart">
		<div class="thumbnail">
		<% if session[:cart].empty? %>
			<p>You have no products in your cart</p>
			<% else %>
				<% @cart.each do |product| %>
					<p>
						<%= product.name %>
					</p>
				<% end %>
		<% end %>
		</div>
	</div>
</header>