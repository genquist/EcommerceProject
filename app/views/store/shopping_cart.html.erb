<div class="page-header">
	<h3>My Cart</h3>
</div>

<div class="row">
	<div class="span12">
		<div class="thumbnail">
			<div class="caption">
				<% if session[:cart].empty? %>
					<p>You have no products in your cart</p>
					<% else %>
					<% @cart.each do |product| %>
						<p>
						<%= product.name %> - <%= number_to_currency product.price %> <button class="btn"><i class=" icon-remove"></i> <%= link_to "Remove", root_path %></button>
						</p>
					<% end %>
				<p><strong>Total: <%= number_to_currency @total %></strong></p>
				<button class="btn"><%= link_to "Order", shopping_cart_path %></button><button class="btn"><%= link_to "Clear Cart", clear_cart_path %></button>
				<% end %>
			</div>
		</div>
	</div>
</div>